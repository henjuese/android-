<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="wrap_button">
		<item name="android:layout_width">91dp</item>
		<item name="android:layout_height">78dp</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#000</item>
	</style>
	
    <style name="wrap_button_cross">
		<item name="android:layout_width">58dp</item>
		<item name="android:layout_height">55dp</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000</item>
	</style>
	
    
    <style name="wrap_button4">
		<item name="android:layout_width">80dp</item>
		<item name="android:layout_height">62dp</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#000</item>
	</style>
	
    <style name="wrap_button_cross4">
		<item name="android:layout_width">58dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000</item>
	</style>
    
	<!--按钮压下的颜色 -->
	<drawable name="clr_normal">#fff</drawable>
    <drawable name="clr_pressed">#dcdcdc</drawable>
    
    <drawable name="deng_normal">#ff6501</drawable>
    <drawable name="deng_pressed">#ff4301</drawable>

</resources>
